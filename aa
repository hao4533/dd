PC[3]=sw2
# ============================
# LIÊN KẾT GIỮA CÁC ROUTER
# ============================
# liên kết giữa rcusc ↔ rctu
rcusc[2]=rctu[2]
# liên kết giữa rctu ↔ rsofl
rctu[3]=rsofl[3]
# liên kết giữa rsofl ↔ rsarg
rsofl[1]=rsarg[1]
