S[2]=sw1
# ============================
# MẠNG SỬ DỤNG OSPFv2 (bên phải)
# ============================
# LAN D – 155.56.158.192/27
D[0]=d
D[1]=rctu
# LAN E – 155.57.121.128/27
E[0]=e
