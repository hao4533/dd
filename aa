# BaiTap10 - Kết nối hai mạng LAN qua Router

pc1[eth0]=switch1[eth0]
pc2[eth0]=switch1[eth1]
switch1[eth2]=router[eth0]
pc3[eth0]=switch2[eth0]
pc4[eth0]=switch2[eth1]
switch2[eth2]=router[eth1]

ip a add 192.168.10.11/24 dev eth0
ip r add default via 192.168.10.254

ip a add 192.168.10.12/24 dev eth0
ip r add default via 192.168.10.254

ip a add 192.168.11.13/24 dev eth0
ip r add default via 192.168.11.254

ip a add 192.168.11.14/24 dev eth0
ip r add default via 192.168.11.254

ip a add 192.168.10.254/24 dev eth0 
ip a add 192.168.11.254/24 dev eth1 
sysctl -w net.ipv4.ip_forward=1

ifconfig eth0 192.168.10.1/24 up
ifconfig eth1 192.168.11.1/24 up
sysctl -w net.ipv4.ip_forward=1
