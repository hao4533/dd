sudo apt update && sudo apt upgrade -y
sudo apt install -y apt-transport-https ca-certificates curl software-properties-common python3 python3-pip git build-essential xterm
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io
sudo usermod -aG docker $USER
git clone https://github.com/KatharaFramework/Kathara.git
mv Kathara KatharaMMT
cd KatharaMMT
sudo ./install.sh
echo 'export NETKIT_HOME=~/KatharaMMT/bin' >> ~/.bashrc
echo 'export PATH=$PATH:$NETKIT_HOME' >> ~/.bashrc
echo 'export MANPATH=:$NETKIT_HOME/man' >> ~/.bashrc
source ~/.bashrc
https://github.com/KatharaFramework/Kathara/releases
