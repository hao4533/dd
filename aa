# BaiTap10 - Kết nối hai mạng LAN bằng Router

pc1[eth0]=switch1
pc2[eth0]=switch1
switch1[eth2]=router[eth0]

pc3[eth0]=switch2
pc4[eth0]=switch2
switch2[eth2]=router[eth1]

ifconfig eth0 192.168.10.11/24 up
ip route add default via 192.168.10.1

ifconfig eth0 192.168.10.12/24 up
ip route add default via 192.168.10.1

ifconfig eth0 192.168.11.13/24 up
ip route add default via 192.168.11.1

ifconfig eth0 192.168.11.14/24 up
ip route add default via 192.168.11.1

brctl addbr br0
brctl addif br0 eth0 eth1 eth2
ifconfig br0 up

brctl addbr br0
brctl addif br0 eth0 eth1 eth2
ifconfig br0 up

ifconfig eth0 192.168.10.1/24 up
ifconfig eth1 192.168.11.1/24 up

